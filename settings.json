{
    "window.zoomLevel": 1,
    "window.commandCenter": false,
    "editor.fontSize": 16,
    "telemetry.telemetryLevel": "off",
    "files.autoSave": "afterDelay",
    // "http.proxyAuthorization": null,
    // "http.proxy": "http://",
    "editor.fontFamily": "Jetbrains Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.lineHeight": 1.7,
    "editor.stickyScroll.enabled": false,
    "workbench.sideBar.location": "right",
    "editor.fontLigatures": true,
    "workbench.settings.applyToAllProfiles": [
    ],
    "vim.enableNeovim": true,
    "vim.neovimUseConfigFile": true,
    "vim.neovimConfigPath": "~/.config/nvim/init.vim",
    "vim.leader": "<Space>",
    "vim.visualModeKeyBindings": [
        { "before": [ ">" ], "commands": [ "editor.action.indentLines" ] },
        { "before": [ "<" ], "commands": [ "editor.action.outdentLines" ] },
        { "before": ["ctrl+h"], "commands": ["editor.action.moveLinesDownAction"] },
        { "before": ["ctrl+j"], "commands": ["editor.action.moveLinesUpAction"] },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["$"], "after": ["g", "_"] },
        { "before": ["g", "_"], "after": ["$"] }
    ],
    "vim.normalModeKeyBindings": [
        {"before": ["leader", "l", "s"], "commands": ["workbench.action.gotoSymbol"]},
        {"before": ["leader", "l", "p"], "commands": ["workbench.action.showAllSymbols"]},
        {"before": ["leader", "l", "r"], "commands": ["editor.action.rename"]},
        {"before": ["leader", "l", "c"], "commands": ["editor.action.quickFix"]},
        
        { "before": ["ctrl+h"], "commands": ["editor.action.moveLinesDownAction"] },
        { "before": ["ctrl+j"], "commands": ["editor.action.moveLinesUpAction"] },       
 
        { "before": ["leader", "v"], "commands": [":vsplit"] }, 
        { "before": ["leader", "s"], "commands": [":split"] },

        { "before": ["leader","n","h"],"commands": [":nohl"] },
        { "before": ["leader","e"], "commands": ["editor.action.format", "workbench.action.files.save"] },

        { "before": ["g", "p", "d"], "commands": [ "editor.action.peekDefinition" ] },
        { "before": ["g", "p", "t"], "commands": ["editor.action.peekTypeDefinition"] },
        { "before": ["g", "p", "i"], "commands": ["editor.action.peekImplementation"] },

        { "before": ["shift+k"], "commands": ["editor.action.showDefinitionPreviewHover"] },
        { "before": ["g", "i"], "commands": ["editor.action.goToImplementation"] },
        { "before": ["g", "r"], "commands": ["editor.action.referenceSearch.trigger"] },
        { "before": ["g", "t"], "commands": ["editor.action.goToTypeDefinition"] },

        { "before": ["leader", "p"], "commands": ["workbench.action.quickOpen"] },

        { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
        { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] },
    ],
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "workbench.activityBar.location": "top",
    "git.autofetch": true,
    "diffEditor.ignoreTrimWhitespace": true,

    "cursor.general.gitGraphIndexing": "enabled",
    "cursor-retrieval.canAttemptGithubLogin": false,
}
